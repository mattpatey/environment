Config {
    font = "xft:inconsolata:size=10:antialias=true"
    , bgColor = "#002b36"
    , fgColor = "#657b83"
    , position = Top
    , lowerOnStart = False
    , commands = [
        Run Date "<fc=#93a1a1>%a %b %_d %H:%M</fc>" "date" 10
        , Run StdinReader
        ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %date%"
}
