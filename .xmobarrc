Config { 
    font = "xft:Consolas:size=9:antialias=false"
    , bgColor = "#111111"
    , fgColor = "#cccccc"
    , position = BottomW L 100
    , lowerOnStart = False
    , commands = [ 
        Run Date "%a %b %_d %H:%M" "date" 10
        , Run StdinReader
        ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ <fc=#ee9a00>%date%</fc>"
}
